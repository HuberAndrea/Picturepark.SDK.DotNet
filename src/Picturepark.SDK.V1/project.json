{
  "title": "Picturepark.SDK.V1",
  "version": "0.14.0",
  "description": "Picturepark DotNet SDK",
  "packOptions": {
    "iconUrl": "https://bitbucket.vit.ch:8443/projects/PP9/repos/picturepark.public/browse/picturepark-240px.png?raw",
    "licenseUrl": "https://bitbucket.vit.ch:8443/projects/PP9/repos/Picturepark.SDK.DotNet"
  },
  "dependencies": {
    "Newtonsoft.Json": "9.0.1",
    "Picturepark.SDK.V1.Contract": "0.13.1",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "frameworks": {
    "netstandard1.3": {
      "dependencies": {
        "System.Runtime": "4.3.0",
        "System.ComponentModel.Annotations": "4.3.0",
        "System.Threading": "4.3.0",
        "System.Threading.Tasks": "4.3.0",
        "System.Threading.Timer": "4.3.0",
        "System.Net.Primitives": "4.3.0",
        "System.IO": "4.3.0",
        "System.Reflection.TypeExtensions": "4.3.0",
        "System.Net.Http": "4.3.0",
        "System.Collections": "4.3.0",
        "System.IO.FileSystem": "4.3.0"
      }
    }
  },

  "buildOptions": {
    "xmlDoc": true,
    "additionalArguments": [ "/ruleset:../Picturepark.SDK.DotNet.ruleset" ],
    "nowarn": [ "CS1591", "SA1600", "SA1601" ]
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}
