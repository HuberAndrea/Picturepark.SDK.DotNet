{
  "title": "Picturepark.SDK.V1.Contract",
  "version": "0.14.0",
  "description": "Picturepark DotNet SDK Contracts",
  "packOptions": {
    "iconUrl": "https://bitbucket.vit.ch:8443/projects/PP9/repos/picturepark.public/browse/picturepark-240px.png?raw",
    "licenseUrl": "https://bitbucket.vit.ch:8443/projects/PP9/repos/Picturepark.SDK.DotNet"
  },

  "dependencies": {
    "Newtonsoft.Json": "9.0.1",
    "System.ComponentModel.Annotations": "4.3.0",
    "System.Diagnostics.Tools": "4.3.0",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "buildOptions": {
    "xmlDoc": true,
    "additionalArguments": [ "/ruleset:../Picturepark.SDK.DotNet.ruleset" ],
    "nowarn": [ "CS1591", "SA1600", "SA1601" ]
  },

  "frameworks": {
    "netstandard1.3": {}
  },
  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}